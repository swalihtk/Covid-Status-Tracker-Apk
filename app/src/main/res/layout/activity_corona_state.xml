            <TableRow android:background="#F61818">

                <TextView
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:text="  Total Deaths"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tw_getStateDeaths"
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:text="00000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#35DA09">

                <TextView
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:text="  Recovered"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tw_getStateRecover"
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:text="00000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="@color/white">

                <TextView />

                <TextView />
            </TableRow>

            <TableRow android:background="#B81D1D">

                <TextView
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:text="  Today Confirmed"
                    android:textSize="16dp"
                    android:textStyle="bold" />

